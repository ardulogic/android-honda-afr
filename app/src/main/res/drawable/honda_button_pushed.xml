<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft radial glow; big so just edges show -->
    <item android:left="-10dp" android:top="-10dp" android:right="-10dp" android:bottom="-10dp">
        <shape android:shape="oval">
            <gradient android:type="radial"
                android:gradientRadius="60dp"
                android:startColor="#003300"
                android:endColor="#00000000"/>
        </shape>
    </item>

    <!-- Remainder identical to idle -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <solid android:color="#66000000"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <stroke android:width="1dp">
                <gradient android:startColor="#AAAAAA"
                    android:endColor="#333333"
                    android:angle="270"/>
            </stroke>
            <solid android:color="#3B3B3B"/>
        </shape>
    </item>

    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <gradient android:startColor="#585858"
                android:endColor="#303030"
                android:angle="270"/>
        </shape>
    </item>

</layer-list>