<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/scientific_background"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="16dp"
    android:elevation="8dp">

    <!-- Drag handle area -->
    <LinearLayout
        android:id="@+id/dragHandle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/layoutFuelStatsContent"
        app:layout_constraintStart_toStartOf="@+id/layoutFuelStatsContent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Visual drag indicator - 80% width -->
        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="0.8"
            android:background="@color/scientific_text_secondary"
            android:alpha="0.5" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />

        <!-- Close button -->
        <ImageButton
            android:id="@+id/buttonCloseFuelStats"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/scientific_text_primary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutFuelStatsContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dragHandle"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textStatsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Total"
            android:textColor="@color/scientific_text_primary" />

        <TextView
            android:id="@+id/textStatsBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="00000.0"
            android:textColor="@color/scientific_text_primary"
            android:textSize="44sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textStatsMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="0.00"
                android:textColor="@color/scientific_text_primary"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textStatsMediumLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:rotation="90"
                android:text="100km"
                android:textColor="@color/scientific_text_secondary"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textStatsSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="0.00"
                android:textColor="@color/scientific_text_primary"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textStatsSmallLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:rotation="90"
                android:text="Total"
                android:textColor="@color/scientific_text_secondary"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Mode switch button at bottom - centered -->
        <Button
            android:id="@+id/buttonSwitchMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/button_background_primary"
            android:text="Trip"
            android:textColor="@color/button_text_light"
            android:textSize="14sp"
            android:minWidth="100dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

