<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <LinearLayout
        android:id="@+id/layoutObdLogHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_spacing_sm"
        android:layout_marginTop="@dimen/app_spacing_sm"
        android:layout_marginEnd="@dimen/app_spacing_sm"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textObdLogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OBD Log"
            android:textColor="@color/app_text_primary"
            android:textSize="16sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonAutoScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/app_button_primary_bg"
            android:text="Auto"
            android:textColor="@color/app_button_text_light" />

        <Space
            android:layout_width="@dimen/app_spacing_sm"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonClearObdLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/app_button_primary_bg"
            android:text="Clear"
            android:textColor="@color/app_button_text_light" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerObdLog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/app_spacing_md"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutObdLogHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>

